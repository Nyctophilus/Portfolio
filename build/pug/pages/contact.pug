section.contact#contact(data-icon="email")
	.container 
		.content.grid-2
			.text-area
				h2.h1.spec-head.upper-case(data-shadow="now")
					+spanify('contact me')
					include ../components/eye-follow

				p I'm interested in freelance and job offers - especially ambitious and positive environment. However, if you have other feedback, don't hesitate to use the form.

				.contact-form
					form(id="contact-form" autocomplete="off" novalidate)
						ul
							li.name
								input(placeholder="Name" type="text" name="name")


							li.mail
								input(placeholder="Email" type="email" name="email")


							li.subject
								input(placeholder="Subject" type="text" name="subject")


							li.msg
								textarea(placeholder="Message" name="msg")

							li.submit
								a(id="submit-form" class="flat-button")

										span.bg
										span.text Send message!
								input(style="display: none" type="submit")


			<iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d3410.5785375624514!2d29.98822196441759!3d31.260088671930426!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sus!4v1648735141809!5m2!1sen!2sus" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

		.contact-info 
			.info 	
				.head 
					i.icon.icon-location 
					p.capitalize location: 
				p Alexandria, Egypt 

				
			.info 	
				.head 
					i.icon.icon-gmail 
					p.capitalize email: 
				p mohammed.yuossry@gmail.com

			.info 	
				.head 
					i.icon.icon-education 
					p.capitalize education: 
				p Pharos University, Alexandria

			.info 	
				.head 
					i.icon.icon-whatsapp 
					p.capitalize Mobile Number: 
				p +201125595287

			.info 	
				.head 
					i.icon.icon-earth 
					p.capitalize languages: 
				p Arabic, English

		include ../components/footer